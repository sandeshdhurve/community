<%- model_class = Forum -%>
<div class="page-header">
  <h1><%=t '.title', :default => Forum %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @forum.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:type_of_forum) %></dt>
      <dd><pre class="prettyprint"><%= @forum.type_of_forum %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              forums_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_forum_path(@forum), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              forum_path(@forum),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

